<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.my.MyCollectionsActivity">

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/my_collection_title_song"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/my_collection_title_song">

        </TextView>

        <TextView
            android:id="@+id/my_collection_title_singer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="20sp"
            android:text="@string/my_collection_title_singer">

        </TextView>

        <TextView
            android:id="@+id/my_collection_title_album"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="20sp"
            android:text="@string/my_collection_title_album">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/my_collection_line_song"
            android:layout_height="2dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@color/my_collection_line_select_color" />

        <View
            android:id="@+id/my_collection_line_singer"
            android:layout_height="2dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@color/my_collection_line_color" />

        <View
            android:id="@+id/my_collection_line_album"
            android:layout_height="2dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@color/my_collection_line_color" />
    </LinearLayout>


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/my_collection_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.viewpager.widget.ViewPager>

</LinearLayout>