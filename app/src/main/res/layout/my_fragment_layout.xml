<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/my_fragment_local_music"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/my_local_music_icon"
                            android:layout_width="@dimen/my_icon_size"
                            android:layout_height="@dimen/my_icon_size"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/my_local_music">

                        </ImageView>
                    </RelativeLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/my_local_music_text"
                        android:textColor="@color/setting_font_color"
                        android:textSize="@dimen/my_music_icon_text_size">

                    </TextView>

                    <TextView
                        android:id="@+id/my_local_music_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/my_local_music_count"
                        android:textColor="@color/my_bottom_song_count"
                        android:textSize="@dimen/my_music_icon_number_text_size">

                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/my_fragment_download_music"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/my_download_music_icon"
                            android:layout_width="@dimen/my_icon_size"
                            android:layout_height="@dimen/my_icon_size"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/my_download_music_icon">

                        </ImageView>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/my_download_music_text"
                        android:textColor="@color/setting_font_color"
                        android:textSize="@dimen/my_music_icon_text_size">

                    </TextView>

                    <TextView
                        android:id="@+id/my_download_music_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/my_local_music_count"
                        android:textColor="@color/my_bottom_song_count"
                        android:textSize="@dimen/my_music_icon_number_text_size">

                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/my_fragment_recently_played_music"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/my_recently_music_icon"
                            android:layout_width="@dimen/my_icon_size"
                            android:layout_height="@dimen/my_icon_size"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/my_recently_music_played">

                        </ImageView>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/my_played_music_text"
                        android:textColor="@color/setting_font_color"
                        android:textSize="@dimen/my_music_icon_text_size">

                    </TextView>

                    <TextView
                        android:id="@+id/my_recently_music_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/my_local_music_count"
                        android:textColor="@color/my_bottom_song_count"
                        android:textSize="@dimen/my_music_icon_number_text_size">

                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/my_fragment_favourite_music"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/my_favourite_music_icon"
                            android:layout_width="@dimen/my_icon_size"
                            android:layout_height="@dimen/my_icon_size"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/my_favourite_music_icon">

                        </ImageView>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/my_favourite_music_text"
                        android:textColor="@color/setting_font_color"
                        android:textSize="@dimen/my_music_icon_text_size">

                    </TextView>

                    <TextView
                        android:id="@+id/my_favourite_music_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/my_local_music_count"
                        android:textColor="@color/my_bottom_song_count"
                        android:textSize="@dimen/my_music_icon_number_text_size">

                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/my_fragment_collection_music"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/my_collection_music_icon"
                            android:layout_width="@dimen/my_icon_size"
                            android:layout_height="@dimen/my_icon_size"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/my_collection_music_icon">

                        </ImageView>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/my_collection_music_text"
                        android:textColor="@color/setting_font_color"
                        android:textSize="@dimen/my_music_icon_text_size">

                    </TextView>

                    <TextView
                        android:id="@+id/my_collection_music_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/my_local_music_count"
                        android:textColor="@color/my_bottom_song_count"
                        android:textSize="@dimen/my_music_icon_number_text_size">

                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/my_fragment_mv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/my_buy_music_icon"
                            android:layout_width="@dimen/my_icon_size"
                            android:layout_height="@dimen/my_icon_size"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/my_mv_collection">

                        </ImageView>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="@string/my_buy_music_text"
                        android:textColor="@color/setting_font_color"
                        android:textSize="@dimen/my_music_icon_text_size">

                    </TextView>

                    <TextView
                        android:id="@+id/my_buy_music_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/my_local_mv_count"
                        android:textColor="@color/my_bottom_song_count"
                        android:textSize="@dimen/my_music_icon_number_text_size">

                    </TextView>
                </LinearLayout>
            </LinearLayout>


            <include layout="@layout/my_fragment_horizontal_line"></include>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <ImageView
                    android:id="@+id/my_song_list_show_detail"
                    android:layout_width="20dp"
                    android:layout_height="22dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="3dp"
                    android:background="@drawable/my_song_list_show_button"
                    android:scaleType="fitCenter">

                </ImageView>

                <TextView
                    android:id="@+id/my_song_list_self_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/my_song_list_show_detail"
                    android:gravity="center"
                    android:text="@string/my_song_lists"
                    android:textColor="@color/setting_font_color"
                    android:textSize="14sp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/my_song_list_number"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="3dp"
                    android:layout_toEndOf="@+id/my_song_list_self_text"
                    android:gravity="center"
                    android:text="@string/my_song_lists_number">

                </TextView>

                <ImageView
                    android:id="@+id/my_song_list_add"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="3dp"
                    android:layout_toLeftOf="@+id/my_song_lists_new"
                    android:background="@drawable/my_song_list_add"
                    android:scaleType="fitCenter">

                </ImageView>

                <TextView
                    android:id="@+id/my_song_lists_new"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/my_song_list_edit_icon"
                    android:gravity="center"
                    android:text="@string/my_song_lists_new"
                    android:textSize="13sp">

                </TextView>

                <ImageView

                    android:id="@+id/my_song_list_edit_icon"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="3dp"
                    android:layout_toLeftOf="@+id/my_song_lists_edit"
                    android:background="@drawable/my_song_list_edit"
                    android:scaleType="fitCenter">

                </ImageView>

                <TextView
                    android:id="@+id/my_song_lists_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:text="@string/my_song_lists_edit"
                    android:textSize="13sp">

                </TextView>
            </RelativeLayout>

            <TextView
                android:id="@+id/my_song_list_none_text_view"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="@string/my_song_list_none_text_view">

            </TextView>

            <com.quibbler.sevenmusic.view.MyListView
                android:id="@+id/my_song_list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </com.quibbler.sevenmusic.view.MyListView>

            <include layout="@layout/my_fragment_horizontal_line"></include>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <ImageView
                    android:id="@+id/my_collection_song_list_show_detail"
                    android:layout_width="20dp"
                    android:layout_height="22dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="3dp"
                    android:background="@drawable/my_song_list_show_button"
                    android:scaleType="fitCenter">

                </ImageView>

                <TextView
                    android:id="@+id/my_collection_song_list_self_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/my_collection_song_list_show_detail"
                    android:gravity="center"
                    android:text="@string/my_collection_song_lists_edit"
                    android:textColor="@color/setting_font_color"
                    android:textSize="14sp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/my_collection_song_list_number"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="3dp"
                    android:layout_toEndOf="@+id/my_collection_song_list_self_text"
                    android:gravity="center"
                    android:text="@string/my_song_lists_number">

                </TextView>

                <ImageView

                    android:id="@+id/my_collection_song_list_edit_icon"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="3dp"
                    android:layout_toLeftOf="@+id/my_collection_song_lists_edit"
                    android:background="@drawable/my_song_list_edit"
                    android:scaleType="fitCenter">

                </ImageView>

                <TextView
                    android:id="@+id/my_collection_song_lists_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:text="@string/my_song_lists_edit"
                    android:textSize="13sp">

                </TextView>
            </RelativeLayout>

            <TextView
                android:id="@+id/my_collection_list_none_text_view"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="@string/my_collection_list_none_text_view">

            </TextView>

            <com.quibbler.sevenmusic.view.MyListView
                android:id="@+id/my_collection_song_list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </com.quibbler.sevenmusic.view.MyListView>

            <include layout="@layout/my_fragment_horizontal_line"></include>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="@string/my_song_list_recommend_text"
                android:textColor="@color/setting_font_color"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/my_recommend_song_list_icon_one"
                        android:layout_width="@dimen/my_recommend_icon_size"
                        android:layout_height="@dimen/my_recommend_icon_size"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/my_wait_icon">

                    </ImageView>

                    <TextView
                        android:id="@+id/my_recommend_song_list_text_one"
                        android:layout_width="@dimen/my_recommend_icon_size"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:ellipsize="end"
                        android:lineSpacingMultiplier="0.8"
                        android:maxEms="11"
                        android:maxLines="2"
                        android:textColor="@color/setting_font_color"
                        android:textSize="@dimen/my_recommend_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/my_recommend_song_list_icon_two"
                        android:layout_width="@dimen/my_recommend_icon_size"
                        android:layout_height="@dimen/my_recommend_icon_size"
                        android:layout_gravity="center"
                        android:src="@drawable/my_wait_icon">

                    </ImageView>

                    <TextView
                        android:id="@+id/my_recommend_song_list_text_two"
                        android:layout_width="@dimen/my_recommend_icon_size"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:maxLines="2"
                        android:textColor="@color/setting_font_color"
                        android:textSize="@dimen/my_recommend_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/my_recommend_song_list_icon_three"
                        android:layout_width="@dimen/my_recommend_icon_size"
                        android:layout_height="@dimen/my_recommend_icon_size"
                        android:layout_gravity="center"
                        android:src="@drawable/my_wait_icon">

                    </ImageView>

                    <TextView
                        android:id="@+id/my_recommend_song_list_text_three"
                        android:layout_width="@dimen/my_recommend_icon_size"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:maxLines="2"
                        android:textColor="@color/setting_font_color"
                        android:textSize="@dimen/my_recommend_text_size" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/my_recommend_song_list_icon_four"
                        android:layout_width="@dimen/my_recommend_icon_size"
                        android:layout_height="@dimen/my_recommend_icon_size"
                        android:layout_gravity="center"
                        android:src="@drawable/my_wait_icon">

                    </ImageView>

                    <TextView
                        android:id="@+id/my_recommend_song_list_text_four"
                        android:layout_width="@dimen/my_recommend_icon_size"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:maxLines="2"
                        android:textColor="@color/setting_font_color"
                        android:textSize="@dimen/my_recommend_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/my_recommend_song_list_icon_five"
                        android:layout_width="@dimen/my_recommend_icon_size"
                        android:layout_height="@dimen/my_recommend_icon_size"
                        android:layout_gravity="center"
                        android:src="@drawable/my_wait_icon">

                    </ImageView>

                    <TextView
                        android:id="@+id/my_recommend_song_list_text_five"
                        android:layout_width="@dimen/my_recommend_icon_size"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:maxLines="2"
                        android:textColor="@color/setting_font_color"
                        android:textSize="@dimen/my_recommend_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/my_recommend_song_list_icon_six"
                        android:layout_width="@dimen/my_recommend_icon_size"
                        android:layout_height="@dimen/my_recommend_icon_size"
                        android:layout_gravity="center"
                        android:src="@drawable/my_wait_icon">

                    </ImageView>

                    <TextView
                        android:id="@+id/my_recommend_song_list_text_six"
                        android:layout_width="@dimen/my_recommend_icon_size"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:maxLines="2"
                        android:textColor="@color/setting_font_color"
                        android:textSize="@dimen/my_recommend_text_size" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>