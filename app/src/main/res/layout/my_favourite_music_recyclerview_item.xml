<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <ImageView
        android:layout_marginLeft="2dp"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:background="@drawable/my_collection_song_icon_item"
        android:layout_width="55dp"
        android:layout_height="55dp">

    </ImageView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginLeft="3dp"
            android:id="@+id/my_favourite_music_song_name_text"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:singleLine="true">

        </TextView>

        <TextView
            android:id="@+id/my_favourite_music_singer_name_text"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:singleLine="true">

        </TextView>

    </LinearLayout>

    <ImageView
        android:layout_marginRight="5dp"
        android:id="@+id/my_favourite_music_item_button"
        android:background="@drawable/my_favourite_music_item_button"
        android:layout_gravity="center"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:scaleType="fitCenter">

    </ImageView>
</LinearLayout>