<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <ImageView
        android:id="@+id/my_local_file_dir_icon"
        android:scaleType="fitCenter"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/my_music_path_item" />

    <LinearLayout
        android:layout_marginLeft="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:singleLine="true"
            android:layout_marginTop="5dp"
            android:textSize="22sp"
            android:id="@+id/music_list_item_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/my_bottom_song_count"
                android:id="@+id/path_list_song_count"
                android:singleLine="true"
                android:textSize="11sp"
                android:layout_width="50sp"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:layout_gravity="bottom"
                android:id="@+id/path_detail_item"
                android:textSize="10sp"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>