<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/mv_comment_user_picture"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="6"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/mv_comment_username"
                android:layout_width="200dp"
                android:layout_height="15dp"
                android:textColor="#000"
                android:textSize="12sp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/mv_comment_likecount"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_toLeftOf="@id/mv_like_icon"
                    android:textSize="12sp"
                    android:text="test"/>
                <ImageButton
                    android:id="@+id/mv_like_icon"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:background="@drawable/mv_content_like"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="-2dp"
                    android:layout_marginRight="5dp"/>
            </RelativeLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/mv_comment_time"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="9sp"/>
        <TextView
            android:id="@+id/mv_comment_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"/>
    </LinearLayout>

</LinearLayout>