<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="65dp">

    <ImageView
        android:id="@+id/my_music_lists_item_icon"
        android:layout_marginStart="10dp"
        android:background="@drawable/my_song_list_item_icon"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:layout_width="55dp"
        android:layout_height="55dp">

    </ImageView>

    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginStart="5dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <TextView
            android:singleLine="true"
            android:maxEms="11"
            android:ellipsize="end"
            android:id="@+id/my_song_list_item_name_text"
            android:layout_width="match_parent"
            android:textSize="16sp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/my_bottom_song_count"
                android:id="@+id/my_song_list_song_number_hint"
                android:singleLine="true"
                android:textSize="10sp"
                android:layout_width="35dp"
                android:layout_height="wrap_content" />

            <!--        android:ellipsize="marquee"-->
            <!--        android:marqueeRepeatLimit="1"-->
            <TextView
                android:id="@+id/my_song_list_item_detail"
                android:singleLine="true"
                android:maxEms="11"
                android:ellipsize="end"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:layout_gravity="center"
        android:background="@drawable/my_song_list_item_delete_button"
        android:id="@+id/my_song_list_item_delete_button"
        android:visibility="gone"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="10dp">

    </ImageView>
</LinearLayout>