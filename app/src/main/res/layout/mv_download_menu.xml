<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#FFF"
    android:paddingTop="20dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/mv_iv_store"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/mv_collect_button"
            android:layout_marginBottom="-10dp"/>

        <TextView
            android:id="@+id/mv_tv_store_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mv_collection"
            android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginLeft="10dp">

        <ImageView
            android:id="@+id/mv_iv_download"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/mv_download_button"
            android:layout_marginBottom="-10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="@string/mv_download" />
    </LinearLayout>

</LinearLayout>
