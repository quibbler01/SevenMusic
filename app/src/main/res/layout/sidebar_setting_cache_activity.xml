<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--ToolBar布局:用于显示返回图标箭头(返回箭头是动态加载生成的)和设置标题-->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/sidebar_toolbar_setting_back_cache"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:text="缓存设置"
                android:textColor="@color/setting_font_color"
                android:textSize="20sp">
            </TextView>

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <!--显示粗灰色分割线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_and_outline_grey"/>

    <!--该布局:用于显示自定义缓存选项-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <!--自定义缓存标题-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="自定义缓存"
            android:textSize="15sp" />

        <!--显示 设置音乐缓存上限-->
        <RelativeLayout
            android:id="@+id/sidebar_rl_cache_music_limit"
            style="@style/item_style">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:text="设置音乐缓存上限"
                android:textColor="@color/setting_font_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/sidebar_tv_cache_music_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="0M" />

        </RelativeLayout>

    </LinearLayout>

    <!--显示粗灰色分割线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_and_outline_grey"/>


    <!--该布局:用于显示播放和下载选项-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <!--清除缓存标题-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="清除缓存"
            android:textSize="15sp" />

        <!--显示 清除音乐缓存 -->
        <RelativeLayout
            android:id="@+id/sidebar_rl_cache_music_clear"
            style="@style/item_style">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:text="清除音乐缓存"
                android:textColor="@color/setting_font_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/sidebar_tv_cache_music_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="0M" />

        </RelativeLayout>

        <!--显示细灰色分割线-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_and_outline_grey"/>


        <!--显示 清除图片缓存 -->
        <RelativeLayout
            android:id="@+id/sidebar_rl_cache_picture_clear"
            style="@style/item_style">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:text="清除图片缓存"
                android:textColor="@color/setting_font_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/sidebar_tv_cache_picture_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="0M"
                android:textSize="15sp" />

        </RelativeLayout>

        <!--显示细灰色分割线-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_and_outline_grey"/>


        <!--显示 清除视频缓存 -->
        <RelativeLayout
            android:id="@+id/sidebar_rl_setting_cache_video_clear"
            style="@style/item_style">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:text="清除视频缓存"
                android:textColor="@color/setting_font_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/sidebar_tv_setting_cache_video_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="0M"
                android:textSize="15sp" />

        </RelativeLayout>

    </LinearLayout>

    <!--显示粗灰色分割线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_and_outline_grey"/>


    <!--该布局:用于其他选项-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <!--工具标题-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="其他"
            android:textSize="15sp" />

        <!--显示 自动清除缓存 -->
        <RelativeLayout
            style="@style/item_style">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:text="自动清除缓存"
                android:textColor="@color/setting_font_color"
                android:textSize="15sp" />

            <Switch
                android:id="@+id/sidebar_switch_cache_auto_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </LinearLayout>

    <!--显示粗灰色分割线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_and_outline_grey"/>



</LinearLayout>