<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/play_bar_ll_play_list"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/colorWhite">

    <!--显示播放的小喇叭图标， 默认不显示-->
    <ImageView
        android:id="@+id/play_bar_iv_horn"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:src="@mipmap/play_bar_music_list_horn"
        android:layout_marginTop="13dp"
        android:visibility="visible"
        />

    <TextView
        android:id="@+id/play_bar_tv_play_list_music_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_toEndOf="@id/play_bar_iv_horn"
        android:text="歌曲名"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />

    <ImageView
        android:id="@+id/play_bar_iv_play_list_single_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentEnd="true"
        android:src="@mipmap/play_bar_music_list_delete" />

</RelativeLayout>